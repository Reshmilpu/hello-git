#    separately.
]
l=[19,26,1.0,2.5,'abc','xyz'] #create a list of string,float and integer
for i in l:
    print("the type of",i,"is",str(type(i)))

#5. using range (1,101),make a list containing even and odd numbers.

even=[] #create empty list for even number
odd=[]   #create empty list for even number
for i in range(1,101):
   if i%2==0:
      even.append(i)
   else:
      odd.append(i)
print("the list for even number is",even)#print even number
print("the list for odd number is",odd)#print odd number

#6. print the pattern

i = 1 #initialize i
for i in range(1,5):  #taking range for printing star
   print("*" *i)  #print pattern of star
   

#7. create a user defined dictionary and get keys correspondng to the value
#      using for loops.

dictionary={'rash':1,'shimi':2,'ritz':3}#create a dictionary
for key in dictionary.keys():
   print(key,dictionary[key])#print dictionary

